<div class="form-container">
  <h1>New MaybDo</h1>

  <%= form_with model: @maybedo, local: true do |form| %>
    <%= form.hidden_field :color, value: params[:color] %>

    <div class="form-group">
      <%= form.label :title, "MaybDo Title" %>
      <%= form.text_field :title, class: "form-control", style: "color: #{params[:color]}" %>
    </div>

    <!-- New board selection section -->
    <div class="form-group">
      <p>Select Board:</p>
      <div class="radio-group">
        <%= form.radio_button :board, 'daily', class: "form-radio" %>
        <%= form.label :board_daily, 'Daily' %><br>

        <%= form.radio_button :board, 'weekly', class: "form-radio" %>
        <%= form.label :board_weekly, 'Weekly' %><br>

        <%= form.radio_button :board, 'monthly', class: "form-radio" %>
        <%= form.label :board_monthly, 'Monthly' %><br>

        <%= form.radio_button :board, 'surprise', class: "form-radio" %>
        <%= form.label :board_surprise, 'ðŸŽ‰ Surprise me' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit 'Create MaybDo', class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to 'Back to Whiteboard', maybedo_tasks_path, class: "btn btn-secondary" %>
</div>
